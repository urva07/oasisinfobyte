    <script>
    var a = document.getElementById('a');
    var b = document.getElementById('b');
    var input = document.getElementById('input');
    a.onclick = function(){
       input.value += 1;
        }
    b.onclick = function(){
        input.value += 2;
        }
    c.onclick = function(){
        input.value += 3;
        }
    d.onclick = function(){
        input.value += 4;
        }
    e.onclick = function(){
        input.value += 5;
        }
    f.onclick = function(){
        input.value += 6;
        }
    g.onclick = function(){
        input.value += 7;
        }
    h.onclick = function(){
        input.value += 8;
        }
    i.onclick = function(){
        input.value += 9;
        }
    j.onclick = function(){
        input.value += ".";
        }
    k.onclick = function(){
        input.value += 0;
        }
    l.onclick = function(){
        var z = Math.sqrt(input.value);
        input.value = z;
        }    
    m.onclick = function(){
        input.value += "(";
        }    
    n.onclick = function(){
        input.value += ")";
        } 
    o.onclick = function(){
        input.value += "/";
        } 
    p.onclick = function(){
        input.value += "*";
        } 
    q.onclick = function(){
        input.value += "+";
        } 
    r.onclick = function(){
        input.value += "-";
        } 
    s.onclick = function(){
        var y = eval(input.value);
        input.value = y*100;
        } 
    t.onclick = function(){
        var y = eval(input.value);
        input.value = y;
    } 
    </script>
    <script>
        var ce = document.getElementById('ce');
        var input = document.getElementById('input');
        ce.onclick = function(){
            const y = input.value;
            let text = "";
            for(i=0;i<input.value.length - 1;i++){ 
             text += y[i];  
            }       
             input.value = text;   
        }
    </script>
